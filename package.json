{
  "name": "rc-construcoes-frontend",
  "version": "5.1.0",
  "description": "Frontend da Aplicação de Gestão RC Construções - Interface do Usuário",
  "private": true,
  "main": "index.html",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "eslint \"./js/**/*.js\" \"./tests/**/*.js\" --fix",
    "lint:check": "eslint \"./js/**/*.js\" \"./tests/**/*.js\"",
    "format": "prettier --write \"**/*.{js,json,css,html,md,yml}\"",
    "clean": "rm -rf dist node_modules cypress/videos cypress/screenshots cypress/results"
  },
  "keywords": [
    "frontend",
    "javascript",
    "html",
    "css",
    "single-page-application",
    "gestion",
    "construction"
  ],
  "author": "marcelommvicente",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^3.9.1",
    "dexie": "^3.2.2",
    "jspdf": "^2.5.1",
    "papaparse": "^5.4.1",
    "sweetalert2": "^11.12.0",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@eslint/js": "^9.4.0",
    "@testing-library/jest-dom": "^6.4.6",
    "babel-jest": "^29.7.0",
    "cypress": "^13.11.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^1.0.2",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.3.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "cypress/globals": true
    },
    "globals": {
      "Chart": "readonly",
      "Dexie": "readonly",
      "Swal": "readonly",
      "Papa": "readonly",
      "jspdf": "readonly",
      "webVitals": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "plugins": [
      "cypress"
    ],
    "rules": {
      "no-console": "warn",
      "prettier/prettier": "error",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "next"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}